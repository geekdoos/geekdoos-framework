{% extends 'layout.twig' %}
{% block title 'Articles' %}
{% block body %}
    <h1>Welcome to the blog</h1>
    <div class="row">
        {% for row in posts | batch(4) %}
            <div class="card-deck">
                {% for post in row %}
                    <div class="card">
                        <div class="card-header">
                            <h3>
                                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">{{ post.name }}</a>
                            </h3>
                            <p class="text-muted">{{ post.created_at  | ago}}</p>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                {{ post.content | nl2br | excerpt }}
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}" class="btn btn-primary">Lire
                                la suit ...</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    {{ paginate(posts, 'blog.index') }}
{% endblock %}